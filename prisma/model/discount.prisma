enum Type {
  percentage
  fixed
}

model Discount {
  id             String   @id @default(uuid())
  code           String   @unique
  stripeCouponId String?
  type           Type
  amount         Int
  validUntil     DateTime
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  orders         Order[]
  carts          Cart[]
}
